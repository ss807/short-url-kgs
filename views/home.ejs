<%- include('header') -%>
  <body>
    <div class="my-5 container text-center">
      <h1>URL Shortener <img src="/static/link.png" alt="" width="40px"></h1>
      <div class="my-5 text-center">
          <form action="/url" method="POST">
              <div class="row text-center d-flex justify-content-center">
                  <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 col-8">
                      <input class="form-control form-control-lg" name="url" type="text" placeholder="Long URL" autocomplete="off" autofocus= "true" required>
                  </div>
              </div>
              <button class="my-3 btn btn-dark" type="submit">Shorten</button>
              <% if(locals.error){ %>
              <div class="alert alert-danger col-lg-6 col-md-6 col-sm-6 col-xs-6 col-6 mx-auto error">
                <%= error %>
              </div>
              <% } %>
          </form>
      </div>
      <% if(locals.shortURL){ %>
        <div>
          <p class="mx-auto pt-2 w-50 bg-transparent" style="min-height: 60px; font-size: 30px;">Shorten URL:
            <a href="<%= shortURL %>" target="_blank">
              <%= shortURL %>
          </a>
          </p>
      </div>
      <% } %>
      <div>
        <ol class="list-group list-group-numbered">
          <% urls.forEach((url, index) => { %>
            <a class="list-group-item d-flex justify-content-left align-items-start" target="_blank" href="<%= process.env.BASE_URL %>/<%= url.shortId %>">
              <div class="ms-2 me-auto">
                <div class="fw-bold justify-content-left" ><%= process.env.BASE_URL %>/<%= url.shortId %></div>
                <%= url.redirectURL %>
              </div>
              <span class="badge bg-primary rounded-pill"><%= url.visitHistory.length %> clicks</span>
            </a>
            <% }) %>
        </ol>
      </div>
      <form class = 'my-3' action = "/user/logout" method = "POST">
        <button class="my-3 btn btn-secondary" type="submit" name="logout" value="logout">Logout</button>
      <form>
      
  </div>
  <scsript src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  </body>
</html>

